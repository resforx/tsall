{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "rootDir": "./src"
  },
  "include": [
    "src/**/*",
    "**/*.d.ts"
  ]
}